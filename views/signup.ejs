<section>
    <h2>Sign Up</h2>
    <form action="/api/users/submit-sign-up" method="POST" id="signup-form">       
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" required><br>
        
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" required><br>
        
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br>
        
        <label for="phone">Phone Number:</label>
        <input type="tel" id="phone" name="phone" required><br>
        
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required><br>
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required><br>
        
        <label for="membership">Membership Plan:</label><br>
        <div>
            <input type="radio" id="lifetime" name="membership" value="lifetime" required>
            <label for="lifetime">Lifetime Membership - $500</label>
        </div>
        <div>
            <input type="radio" id="monthly" name="membership" value="monthly" required>
            <label for="monthly">Monthly Membership - $24</label>
        </div>
        
        <button type="submit">Proceed to Payment</button>
    </form>
</section>