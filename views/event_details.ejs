    .event-meta {
        grid-template-columns: 1fr;
    }
    
    .event-content {
        padding: 20px;
    }
    
    .hero-image {
        height: 250px;
    }
}

.event-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 15px;
}

.event-tag {
    text-decoration: none;
    color: var(--primary-color);
    background-color: #f0f0f0;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.9em;
    transition: all 0.2s ease;
}

.event-tag:hover {
    background-color: var(--primary-color);
    color: white;
}

.location-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
}

.location-link:hover {
    color: var(--primary-color);
    text-decoration: underline;
}

