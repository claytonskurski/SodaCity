<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rentals - Soda City Outdoors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="hero-section position-relative py-5" style="background: linear-gradient(120deg, var(--secondary-color) 0%, var(--primary-color) 100%); min-height: 340px;">
        <div class="container position-relative z-2">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <div class="d-inline-block px-4 py-2 mb-3 rounded-pill shadow-sm" style="background: var(--white); color: var(--primary-color); font-weight: 600; font-size: 1.1rem; letter-spacing: 0.5px;">
                        <i class="fas fa-badge-check text-success me-2"></i> No Hidden Fees &bull; We Deliver!
                    </div>
                    <h1 class="display-4 fw-bold mb-3 text-white">Enjoy the Water, Your Way!</h1>
                    <p class="lead mb-4 text-white-50">We make kayaking and tubing as easy as hiking—just show up and enjoy your day!<br>
                        <span class="fw-semibold">How it works:</span> Choose your location, select your gear, and we'll deliver everything you need for a hassle-free adventure. No experience or equipment required—just bring your sense of fun!
                    </p>
                    <a href="#choose-location" class="btn btn-light btn-lg shadow-sm fw-bold">Explore Locations</a>
                </div>
            </div>
            <div class="row justify-content-center mt-5 g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="info-card p-4 h-100 bg-white shadow rounded-4 border-0 text-start">
                        <div class="feature-icon mb-2"><i class="fas fa-tag fa-lg text-primary"></i></div>
                        <h3 class="h6 mb-3 fw-bold">Our Promise</h3>
                        <ul class="mb-0 ps-3 small">
                            <li class="mb-2"><span class="fw-semibold">The price you see is the price you pay</span>—no extra charges for paddles, life vests, dry bags, or even taxes!</li>
                            <li><span class="fw-semibold">No storage? No transportation? No problem!</span> We deliver the equipment to your desired location. No hassle—just show up and get on the water.</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="info-card p-4 h-100 bg-white shadow rounded-4 border-0 text-start">
                        <div class="feature-icon mb-2"><i class="fas fa-clock fa-lg text-primary"></i></div>
                        <h3 class="h6 mb-3 fw-bold">Flexible Schedule</h3>
                        <ul class="list-unstyled small mb-0">
                            <li class="mb-2"><span class="fw-bold text-primary">10:00 AM</span> – Morning Drop-offs</li>
                            <li class="mb-2"><span class="fw-bold text-primary">2:00 PM</span> – Half-day Pick-ups</li>
                            <li><span class="fw-bold text-primary">6:00 PM</span> – Full-day Pick-ups</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="info-card p-4 h-100 bg-white shadow rounded-4 border-0 text-start">
                        <div class="feature-icon mb-2"><i class="fas fa-water fa-lg text-primary"></i></div>
                        <h3 class="h6 mb-3 fw-bold">Our Rentals</h3>
                        <ul class="list-unstyled small mb-0">
                            <li class="mb-2"><span class="fw-bold">Kayaks:</span> Single and tandem kayaks with paddle and life jacket</li>
                            <li><span class="fw-bold">Tubes:</span> Heavy-duty river tubes with life jacket and optional cooler</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="info-card p-4 h-100 bg-white shadow rounded-4 border-0 text-start">
                        <div class="feature-icon mb-2"><i class="fas fa-map-marker-alt fa-lg text-primary"></i></div>
                        <h3 class="h6 mb-3 fw-bold">Available Locations</h3>
                        <ul class="list-unstyled small mb-0">
                            <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Lake Murray Public Park</li>
                            <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Saluda Shoals Park</li>
                            <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Saluda Riverwalk</li>
                            <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Dreher Island State Park</li>
                            <li><i class="fas fa-check-circle text-success me-2"></i>South Cedar Creek</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="position-absolute top-0 start-0 w-100 h-100 z-1" style="opacity: 0.08; background: url('/static/images/lake-murray.jpg') center/cover no-repeat;"></div>
    </div>
        <div class="row mb-5">
            <div class="col-12">
                <div id="map" style="height: 400px;"></div>
            </div>
        </div>

        <div id="location-step" class="row mb-5">
            <div class="col-12">
                <h2 id="choose-location" class="h3 mb-4 text-center">Choose Your Location</h2>
                <div id="location-cards" class="row g-4"></div>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="bg-white shadow rounded-4 p-4">
                <h3 class="mb-4 text-center fw-bold">Frequently Asked Questions</h3>
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item mb-2">
                        <h2 class="accordion-header" id="faq1-heading">
                            <button class="accordion-button fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#faq1" aria-expanded="true" aria-controls="faq1">
                                What do I need to bring for my rental?
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse show" aria-labelledby="faq1-heading" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Just bring yourself, sunscreen, water, and a sense of adventure! We provide all necessary equipment including life jackets and paddles.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item mb-2">
                        <h2 class="accordion-header" id="faq2-heading">
                            <button class="accordion-button collapsed fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#faq2" aria-expanded="false" aria-controls="faq2">
                                How does delivery and pickup work?
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" aria-labelledby="faq2-heading" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                We deliver your rental to your chosen location at the scheduled time and pick it up when you're done. No need to transport anything yourself!
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item mb-2">
                        <h2 class="accordion-header" id="faq3-heading">
                            <button class="accordion-button collapsed fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#faq3" aria-expanded="false" aria-controls="faq3">
                                Can I book for a group or special event?
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" aria-labelledby="faq3-heading" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Absolutely! For groups larger than 6 or special events, please <a href="/contact" class="text-primary fw-semibold">contact us</a> for custom arrangements and group rates.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item mb-2">
                        <h2 class="accordion-header" id="faq4-heading">
                            <button class="accordion-button collapsed fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#faq4" aria-expanded="false" aria-controls="faq4">
                                What if the weather is bad?
                            </button>
                        </h2>
                        <div id="faq4" class="accordion-collapse collapse" aria-labelledby="faq4-heading" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                If weather conditions are unsafe, we'll work with you to reschedule or refund your booking. Your safety is our top priority.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item mb-2">
                        <h2 class="accordion-header" id="faq5-heading">
                            <button class="accordion-button collapsed fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#faq5" aria-expanded="false" aria-controls="faq5">
                                Are there any hidden fees or upcharges?
                            </button>
                        </h2>
                        <div id="faq5" class="accordion-collapse collapse" aria-labelledby="faq5-heading" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                No! The price you see is the price you pay—no extra charges for paddles, life vests, dry bags, or even taxes. Everything is included!
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Render location cards
    async function renderLocationCards() {
        const container = document.getElementById('location-cards');
        container.innerHTML = '<div class="text-center w-100"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';
        try {
            const res = await fetch('/api/rental-locations');
            const rentalLocations = await res.json();
            if (!rentalLocations.length) {
                container.innerHTML = '<div class="text-center w-100"><div class="alert alert-info">No locations available at this time.</div></div>';
                return;
            }
            container.innerHTML = '';
            rentalLocations.forEach(loc => {
                const card = document.createElement('div');
                card.className = 'col-md-4';
                let imageFile = '';
                switch (loc.name) {
                    case 'Lake Murray Public Park':
                        imageFile = '/static/images/lake-murray.jpg';
                        break;
                    case 'Saluda Shoals Park':
                        imageFile = '/static/images/saluda-shoals.jpg';
                        break;
                    case 'Saluda Riverwalk':
                        imageFile = '/static/images/saluda-riverwalk.jpg';
                        break;
                    case 'Dreher Island State Park':
                        imageFile = '/static/images/dreher-island.jpg';
                        break;
                    case 'South Cedar Creek at Congaree National Park':
                        imageFile = '/static/images/congaree-creek.jpg';
                        break;
                    default:
                        imageFile = '';
                }
                card.innerHTML = `
                    <div class="location-card card h-100 shadow-lg border-0 position-relative overflow-hidden animate__animated animate__fadeInUp" style="border-radius: 1.25rem;">
                        <div class="card-img-top bg-light d-flex align-items-end justify-content-center p-0 position-relative" style="height: 220px;">
                            ${imageFile ? 
                                `<img src="${imageFile}" alt="${loc.name}" class="img-fluid w-100 h-100 object-fit-cover" style="object-fit: cover; border-top-left-radius: 1.25rem; border-top-right-radius: 1.25rem;">` : 
                                `<i class="fas fa-map-marker-alt fa-3x text-primary"></i>`
                            }
                            <div class="w-100 position-absolute bottom-0 start-0 p-2" style="background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(14,116,124,0.7) 100%); border-bottom-left-radius: 1.25rem; border-bottom-right-radius: 1.25rem;">
                                <span class="badge bg-primary text-white shadow" style="font-size: 1rem;">${loc.name.split(' ')[0]}</span>
                            </div>
                        </div>
                        <div class="card-body p-4 bg-white position-relative" style="border-bottom-left-radius: 1.25rem; border-bottom-right-radius: 1.25rem;">
                            <h5 class="card-title h4 mb-2 fw-bold">${loc.name}</h5>
                            <p class="card-text text-muted mb-3">
                                <i class="fas fa-map-marker-alt me-2"></i>${loc.address}
                            </p>
                            ${loc.notes ? 
                                `<div class="alert alert-warning p-2 mb-3 small">
                                    <i class="fas fa-info-circle me-2"></i>${loc.notes}
                                </div>` : 
                                ''
                            }
                            <a class="btn btn-primary w-100 py-2 fw-semibold shadow-sm animate__animated animate__pulse animate__delay-1s" href="/rentals/book/${loc._id}">
                                <i class="fas fa-calendar-plus me-2"></i>Book Now
                            </a>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        } catch (err) {
            container.innerHTML = '<div class="text-center w-100"><div class="alert alert-danger">Error loading locations. Please try again later.</div></div>';
            console.error('Error fetching locations:', err);
        }
    }

    // Google Maps locations and style
    const rentalLocations = [
        {
            name: "Lake Murray Public Park",
            address: "1832-1834 N Lake Dr, Lexington, SC 29072",
            lat: 34.0455,
            lng: -81.2306
        },
        {
            name: "Saluda Shoals Park",
            address: "5605 Bush River Rd, Columbia, SC 29212",
            lat: 34.0532,
            lng: -81.1636
        },
        {
            name: "Saluda Riverwalk",
            address: "650 Candi Ln, Columbia, SC 29210",
            lat: 34.0006,
            lng: -81.0702
        },
        {
            name: "Dreher Island State Park",
            address: "3677 State Park Rd, Prosperity, SC 29127",
            lat: 34.1421,
            lng: -81.4132
        },
        {
            name: "South Cedar Creek at Congaree National Park",
            address: "1716 S Cedar Creek Rd, Gadsden, SC 29052",
            lat: 33.7942,
            lng: -80.7516
        }
    ];

    const mapStyle = [
        {"featureType":"landscape.natural","elementType":"geometry.fill","stylers":[{"visibility":"on"},{"color":"#e0efef"}]},
        {"featureType":"poi","elementType":"geometry.fill","stylers":[{"visibility":"on"},{"hue":"#1900ff"},{"color":"#c0e8e8"}]},
        {"featureType":"road","elementType":"geometry","stylers":[{"lightness":100},{"visibility":"simplified"}]},
        {"featureType":"road","elementType":"labels","stylers":[{"visibility":"off"}]},
        {"featureType":"transit.line","elementType":"geometry","stylers":[{"visibility":"on"},{"lightness":700}]},
        {"featureType":"water","elementType":"all","stylers":[{"color":"#7dcdcd"}]}
    ];

    function initMap() {
        const center = { lat: 34.0455, lng: -81.2306 };
        const map = new google.maps.Map(document.getElementById("map"), {
            zoom: 9,
            center: center,
            styles: mapStyle
        });
        rentalLocations.forEach(loc => {
            const marker = new google.maps.Marker({
                position: { lat: loc.lat, lng: loc.lng },
                map: map,
                title: loc.name
            });
            const infoWindow = new google.maps.InfoWindow({
                content: `<strong>${loc.name}</strong><br>${loc.address}`
            });
            marker.addListener('click', function() {
                infoWindow.open(map, marker);
            });
        });
    }

    // Initialize the page
    document.addEventListener('DOMContentLoaded', function() {
        renderLocationCards();
    });
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= GOOGLE_PLACES_API_KEY %>&callback=initMap" async defer></script>
</body>
</html>